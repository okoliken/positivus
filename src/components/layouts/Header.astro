---
import Logo from "../Logo.astro"
import Button from '../../components/ui/Button.astro';
---

<header class="px-5 py-[1.875rem] container max-w-7xl lg:py-[3.75rem]">
    <div class="flex items-center justify-between">
        <div class="flex items-center justify-between flex-1">
            <Logo />

            <svg class="block xl:hidden" xmlns="http://www.w3.org/2000/svg" width="26" height="19" viewBox="0 0 26 19" fill="none">
                <path d="M1 1.80664H25" stroke="black" stroke-width="2" stroke-linecap="round"/>
                <path d="M1 9.80664H25" stroke="black" stroke-width="2" stroke-linecap="round"/>
                <path d="M1 17.8066H25" stroke="black" stroke-width="2" stroke-linecap="round"/>
            </svg>
        </div>

        <ul class="xl:flex items-center gap-x-10 hidden">
            <li>
                <a href="#" class="text-xl leading-[1.75rem] hover:underline transition-all">About us</a>
            </li>
            <li>
                <a href="#" class="text-xl leading-[1.75rem] hover:underline transition-all">Services</a>
            </li>
            <li>
                <a href="#" class="text-xl leading-[1.75rem] hover:underline transition-all">Use Cases</a>
            </li>
            <li>
                <a href="#" class="text-xl leading-[1.75rem] hover:underline transition-all">Pricing</a>
            </li>
            <li>
                <a href="#" class="text-xl leading-[1.75rem] hover:underline transition-all">Blog</a>
            </li>
            <li>
                <Button className="w-[231px]" text="Request a quote" variant="outline" />
            </li>
        </ul>
    </div>
</header>
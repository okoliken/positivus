---
import SectionHeadings from "../ui/SectionHeadings.astro";
import Illustration from '../../assets/contact/Illustration.png'
import { Image } from "astro:assets";
import Button from "../ui/Button.astro";
---

<div>
  <SectionHeadings
    title="Contact Us"
    content={`Connect with Us: Let's Discuss Your <br class="hidden md:block"/> Digital Marketing Needs`}
  />

  <div
    class="lg:h-[48.313rem] bg-pvGrey w-full rounded-[2.813rem] py-[2.5rem] lg:pt-[3.75rem] lg:pb-20 px-20 lg:px-[6.25rem] flex items-center"
  >
  <div class="flex-shrink-0 w-full lg:w-[34.75rem]">
    <div class="flex items-center gap-x-8">
      <label class="flex items-center gap-x-3.5 cursor-pointer">
        <input type="radio" name="formType" value="sayHi" class="hidden" checked>
        <span class="rounded-full border border-black w-7 h-7 flex items-center justify-center bg-lime-300">
          <span class="w-3 h-3 bg-black rounded-full"></span>
        </span>
        <span class="text-lg">Say Hi</span>
      </label>
      <label class="flex items-center gap-x-3.5 cursor-pointer">
        <input type="radio" name="formType" value="getQuote" class="hidden">
        <span class="rounded-full border border-black w-7 h-7 flex items-center justify-center">
          <span class="w-3 h-3 bg-black rounded-full hidden"></span>
        </span>
        <span class="text-lg">Get a Quote</span>
      </label>
    </div>
    
    <form class="mt-10 flex flex-col gap-y-6">
      <fieldset class="flex items-start flex-col">
        <label class="text-base leading-7 mb-1" for="name">Name</label>
        <input
          class="bg-white w-full max-w-[34.75rem] h-[3.688rem] rounded-[0.875rem] outline-none placeholder:text-lg border border-black px-7 py-4"
          type="text"
          placeholder="Name"
          id="name"
          name="name"
        />
      </fieldset>
      <fieldset class="flex items-start flex-col">
        <label class="text-base leading-7 mb-1" for="email">Email*</label>
        <input
          class="bg-white w-full max-w-[34.75rem] h-[3.688rem] rounded-[0.875rem] outline-none placeholder:text-lg border border-black px-7 py-4"
          type="email"
          placeholder="Email"
          id="email"
          name="email"
          required
        />
      </fieldset>
      <fieldset class="flex items-start flex-col">
        <label class="text-base leading-7 mb-1" for="message">Message*</label>
        <textarea 
          placeholder="Message" 
          class="bg-white w-full max-w-[34.75rem] h-[11.875rem] placeholder:text-lg rounded-[0.875rem] outline-none border border-black px-7 py-4 resize-none"
          id="message"
          name="message"
          required
        ></textarea>
      </fieldset>
      <Button className="w-full max-w-[34.75rem]" text="Send Message" />
    </form>
  </div>

  <div class="flex-1 hidden lg:block transform translate-x-[20rem]">
      <Image class="object-contain" src={Illustration} alt="Illustration" />
  </div>
  </div>


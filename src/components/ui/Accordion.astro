---
import Card from "./Card.astro";

interface Props {
    sections: Array<{
    number:string
    title:string
    content: string
   }>
}

const { sections } = Astro.props
---

{sections.map((section) => (
    <Card className="mb-[1.25rem] lg:!mb-12" cardType="accordion-style">
      <div class="flex items-center justify-between w-full" slot="top-section">
        <div class="flex items-center gap-x-[1.563rem]">
          <h3 class="text-[1.875rem] lg:text-[3.75rem] font-medium">{section.number}</h3>
          <p class="text-[1.125rem] lg:text-[1.875rem] font-medium">{section.title}</p>
        </div>
    
        <div>
          <div
          @click="expanded = !expanded"
          class="bg-pvGrey h-[1.875rem] w-[1.875rem] lg:h-[3.625rem] lg:w-[3.625rem] flex items-center justify-center rounded-full border border-pvDark cursor-pointer"
        >
          <template x-if="expanded">
            <svg
              class="w-[0.811rem] h-[0.811rem] lg:w-fit lg:h-fit"
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="7"
              viewBox="0 0 18 7"
              fill="none"
            >
              <path d="M0 6.14V0.5H17.76V6.14H0Z" fill="black"></path>
            </svg>
          </template>
    
          <template x-if="!expanded">
            <svg
              class="w-[0.811rem] h-[0.811rem] lg:w-fit lg:h-fit"
              xmlns="http://www.w3.org/2000/svg"
              width="26"
              height="26"
              viewBox="0 0 26 26"
              fill="none"
            >
              <path
                d="M9.6 25.58V15.86H0V10.22H9.6V0.5H15.48V10.22H25.08V15.86H15.48V25.58H9.6Z"
                fill="#191A23"></path>
            </svg>
          </template>
        </div>
        </div>
      </div>
    
      <div
        x-show="expanded"
        x-collapse
        :class="expanded && 'pt-[0.938rem] lg:pt-[1.875rem]'"
        slot="content-section"
      >
        <p>
         {section.content}
        </p>
      </div>
    </Card>
))}

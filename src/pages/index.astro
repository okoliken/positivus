---
import Layout from "../layouts/Layout.astro";
import Card from "../components/ui/Card.astro";
import HeroImageDesktop from "../assets/hero/hero-desktop.svg";
import HeroImageMobile from "../assets/hero/hero-mobile.svg";
import SearchEngine from "../assets/services/search-engine.svg";
import Advertising from "../assets/services/advertising.svg";
import Tracking from "../assets/services/tracking.svg";
import SocialMarketing from "../assets/services/social-marketing.svg";
import EmailMarketing from "../assets/services/email-marketing.svg";
import ContentCreation from "../assets/services/content-creation.svg";
import Netflix from "../assets/hero/netflix.svg";
import Notion from "../assets/hero/notion.svg";
import Zoom from "../assets/hero/zoom.svg";
import Hubspot from "../assets/hero/hubspot.svg";
import Dribbble from "../assets/hero/dribbble.svg";
import Amazon from "../assets/hero/amazon.svg";
import Button from "../components/ui/Button.astro";
import SectionHeadings from "../components/ui/SectionHeadings.astro";
import Link from "../components/ui/Link.astro";
import { Image } from "astro:assets";
---

<Layout title="Positivus - Navigating the digital landscape for success.">
  <div
    class="md:container max-w-7xl flex items-start flex-col md:flex-col lg:flex-row lg:items-center lg:justify-between"
  >
    <div class="flex-1 px-[1.25rem] lg:px-0">
      <h3
        class="text-[2.68rem] md:text-[3.125rem] lg:text-6xl text-left font-medium leading-[3.429rem] md:leading-[3.429rem] lg:leading-[4.785rem] mb-3 lg:mb-[2.188rem]"
      >
        Navigating the <br class="hidden xl:block" /> digital landscape <br
          class="hidden xl:block"
        /> for success
      </h3>
      <Image
        class="object-contain mb-1.5 block lg:hidden"
        width={361}
        height={310}
        src={HeroImageMobile}
        alt="hero image"
      />
      <p class="font-normal leading-6 mb-10 lg:text-lg lg:mb-[2.188rem]">
        Our digital marketing agency helps businesses <br
          class="hidden xl:block"
        /> grow and succeed online <br class="hidden lg:block xl:hidden" /> through
        a range of <br class="hidden xl:block" /> services including SEO, PPC, social
        media marketing, <br class="hidden xl:block" /> and <br
          class="hidden lg:block xl:hidden"
        /> content creation.
      </p>
      <Button
        className="w-full lg:max-w-[16.5rem]"
        text="Book a consultation"
      />
    </div>

    <Image
      class="hidden lg:block object-contain flex-1"
      width={600}
      height={515}
      src={HeroImageDesktop}
      alt="hero image"
    />
  </div>
  <div class="mt-12 px-0 md:px-8 max-w-7xl container">
    <div class="company_logos">
      <!-- Desktop and Mobile -->
      <div class="hidden lg:flex items-center justify-between">
        <!-- Desktop Flex Display -->
        <Image class="h-12" src={Amazon} alt="amazon" />
        <Image class="h-12" src={Dribbble} alt="dribbble" />
        <Image class="h-12" src={Hubspot} alt="hubspot" />
        <Image class="h-12" src={Notion} alt="notion" />
        <Image class="h-12" src={Netflix} alt="netflix" />
        <Image class="h-12" src={Zoom} alt="zoom" />
      </div>
      <!-- Mobile Marquee -->
      <div
        class="flex lg:hidden flex-col h-12 overflow-x-hidden overflow-y-auto mb-[1.625rem]"
      >
        <div class="animate-marquee-1 items-center gap-x-[2.368rem]">
          <Image class="h-12" src={Amazon} alt="amazon" />
          <Image class="h-12" src={Dribbble} alt="dribbble" />
          <Image class="h-12" src={Hubspot} alt="hubspot" />
        </div>
      </div>

      <div
        class="flex lg:hidden flex-col h-12 overflow-x-hidden overflow-y-auto"
      >
        <div class="animate-marquee-2 items-center gap-x-[2.368rem]">
          <Image class="h-12" src={Notion} alt="notion" />
          <Image class="h-12" src={Netflix} alt="netflix" />
          <Image class="h-12" src={Zoom} alt="zoom" />
        </div>
      </div>
    </div>
  </div>

  <div class="mt-[3.75rem] md:mt-[9.75rem] px-[1.25rem] md:container max-w-7xl">
    <SectionHeadings
      title="Services"
      content={`At our digital marketing agency, we offer a range of services to <br class="hidden md:block"/> help businesses grow and succeed online. These services include:`}
    />

    <div class="grid grid-cols-1 lg:grid-cols-2 lg:gap-10">
      <Card>
        <div class="flex-none w-full lg:w-[13.813rem]" slot="card-title">
          <p
            class="bg-pvGreen inline text-[clamp(1.625rem,5vw,1.875rem)] font-medium lg:leading-[2.393rem] px-[0.438rem] rounded-[0.438rem] box-decoration-clone leading-tight"
          >
            Search engine optimization
          </p>
        </div>
        <div class="flex w-full justify-between items-end" slot="card-link">
          <Link iconVariant="dark" isDark linkText="Learn more" />
          <Image
            class="w-[10.313rem] object-cover block md:hidden"
            slot="card-image"
            width={165}
            height={129}
            src={SearchEngine}
            alt="services - Search engine optimization"
          />
        </div>
        <Image
          class="w-fit object-cover hidden md:block"
          slot="card-image"
          src={SearchEngine}
          alt="services - Search engine optimization"
        />
      </Card>
      <Card variant="green">
        <div class="w-full" slot="card-title">
          <p
            class="bg-white text-[clamp(1.625rem,5vw,1.875rem)] inline font-medium lg:leading-[2.393rem] box-decoration-clone rounded-[0.438rem] px-[0.438rem] leading-tight"
          >
            Pay-per-click advertising
          </p>
        </div>
        <div class="flex w-full justify-between items-end" slot="card-link">
          <Link iconVariant="dark" isDark linkText="Learn more" />
          <Image
            class="w-[10.313rem] object-cover block md:hidden"
            slot="card-image"
            width={165}
            height={129}
            src={Advertising}
            alt="services - Social Media Marketing"
          />
        </div>
        <Image
          class="w-fit object-cover hidden md:block"
          slot="card-image"
          src={Advertising}
          alt="services - Social Media Marketing"
        />
      </Card>
      <Card variant="dark">
        <div class="w-full" slot="card-title">
          <p
            class="bg-white text-[clamp(1.625rem,5vw,1.875rem)] font-medium lg:leading-[2.393rem] px-[0.438rem] rounded-[0.438rem] box-decoration-clone inline leading-tight"
          >
            Social Media Marketing
          </p>
        </div>
        <div class="flex w-full justify-between items-end" slot="card-link">
          <Link iconVariant="white" isDark={false} linkText="Learn more" />
          <Image
            class="w-[10.313rem] object-cover block md:hidden"
            slot="card-image"
            width={165}
            height={129}
            src={SocialMarketing}
            alt="services - Social Media Marketing"
          />
        </div>
        <Image
          class="w-fit object-cover hidden md:block"
          slot="card-image"
          src={SocialMarketing}
          alt="services - Social Media Marketing"
        />
      </Card>
      <Card>
        <div slot="card-title">
          <p
            class="bg-pvGreen text-[clamp(1.625rem,5vw,1.875rem)] font-medium lg:leading-[2.393rem] px-[0.438rem] rounded-[0.438rem] inline box-decoration-clone leading-tight"
          >
            Email Marketing
          </p>
        </div>
        <div class="flex w-full justify-between items-end" slot="card-link">
          <Link iconVariant="dark" isDark linkText="Learn more" />
          <Image
            class="w-[10.313rem] object-cover block md:hidden"
            slot="card-image"
            width={165}
            height={129}
            src={EmailMarketing}
            alt="services - Email Marketing"
          />
        </div>
        <Image
          class="w-fit object-cover hidden md:block"
          slot="card-image"
          src={EmailMarketing}
          alt="services - Email Marketing"
        />
      </Card>
      <Card variant="green">
        <div class="w-full" slot="card-title">
          <p
            class="bg-white text-[clamp(1.625rem,5vw,1.875rem)] font-medium lg:leading-[2.393rem] px-[0.438rem] rounded-[0.438rem] inline box-decoration-clone leading-tight"
          >
            Content Creation
          </p>
        </div>
        <div class="flex w-full justify-between items-end" slot="card-link">
          <Link iconVariant="dark" isDark linkText="Learn more" />
          <Image
            class="w-[10.313rem] object-cover block md:hidden"
            slot="card-image"
            width={165}
            height={129}
            src={ContentCreation}
            alt="services - Content Creation"
          />
        </div>
        <Image
          class="w-fit object-cover hidden md:block"
          slot="card-image"
          src={ContentCreation}
          alt="services - Content Creation"
        />
      </Card>
      <Card variant="dark">
        <div class="w-full" slot="card-title">
          <p
            class="bg-pvGreen text-[clamp(1.625rem,5vw,1.875rem)] font-medium lg:leading-[2.393rem] px-[0.438rem] rounded-[0.438rem] inline box-decoration-clone leading-tight"
          >
            Analytics and Tracking
          </p>
        </div>
        <div class="flex w-full justify-between items-end" slot="card-link">
          <Link iconVariant="white" isDark={false} linkText="Learn more" />
          <Image
            class="w-[10.313rem] object-cover block md:hidden"
            src={Tracking}
            width={165}
            height={129}
            slot="card-image"
            alt="Analytics and Tracking"
          />
        </div>
        <Image
          class="w-fit object-cover hidden md:block"
          src={Tracking}
          slot="card-image"
          alt="Analytics and Tracking"
        />
      </Card>
    </div>
  </div>
</Layout>

<style>
  @keyframes marquee {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(-50%);
    }
  }

  @keyframes marquee-2 {
    0%,
    100% {
      transform: translateX(0);
    }
    50% {
      transform: translateX(50%);
    }
  }

  .animate-marquee-1 {
    display: flex;
    animation: marquee 20s linear infinite;
  }
  .animate-marquee-2 {
    display: flex;
    animation: marquee-2 20s linear infinite;
  }

  .company_logos img {
    filter: grayscale(100%);
  }
</style>

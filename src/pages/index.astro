---
import Layout from "../layouts/Layout.astro";
import Hero from "../components/pages/Hero.astro";
import Services from '../components/pages/Services.astro'
import CaseStudy from '../components/pages/CaseStudy.astro'
import FAQ from "../components/pages/FAQ.astro";
import Team from "../components/pages/Team.astro";
import Testimonials from "../components/pages/Testimonials.astro";
import Contact from "../components/pages/Contact.astro";
---

<Layout title="Positivus - Navigating the digital landscape for success.">
  <Hero />
  <div class="mt-[3.75rem] md:mt-[9.75rem] px-[1.25rem] md:container max-w-7xl">
    <Services />
    <CaseStudy />
    <FAQ />
    <div class="mt-[3.75rem] lg:mt-[8.75rem]">
      <Team />
    </div>
    <div class="mt-[3.75rem] lg:mt-[8.75rem]">
      <Testimonials />
    </div>
    <div class="mt-[3.75rem] lg:mt-[8.75rem]">
      <Contact />
    </div>
  </div>
</Layout>

